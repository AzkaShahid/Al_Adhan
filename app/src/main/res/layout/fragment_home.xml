<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.sidenavigation.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_top_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15"
            android:text="cityName"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_20">

        </TextView>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/margin_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/brown"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:padding="@dimen/margin_10">

                            <ImageView
                                android:layout_width="@dimen/margin_25"
                                android:layout_height="@dimen/margin_25"
                                android:layout_marginStart="@dimen/margin_5"
                                android:src="@drawable/ic_date">

                            </ImageView>

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_5"
                                android:text="Date"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_20">

                            </TextView>

                            <FrameLayout
                                android:id="@+id/dateLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <View
                                    android:id="@+id/overlayBackground"
                                    android:layout_width="wrap_content"
                                    android:layout_height="440dp"
                                    android:alpha="0.5"
                                    android:background="@android:color/black" />


                                <DatePicker
                                    android:id="@+id/datePicker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"


                                    />

                            </FrameLayout>


                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/white">


                        </com.google.android.material.divider.MaterialDivider>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/weekDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monday"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=","
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/margin_20" />

                                <TextView
                                    android:id="@+id/dateText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:text="05"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20" />

                                <TextView
                                    android:id="@+id/monthText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:text="Dec"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20" />

                                <TextView
                                    android:id="@+id/yearText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:text="2023"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/weekDayAr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monday"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=","
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/margin_20" />

                                <TextView
                                    android:id="@+id/dateTextAr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:text="05"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20" />

                                <TextView
                                    android:id="@+id/monthTextAr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:text="Dec"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20" />

                                <TextView
                                    android:id="@+id/yearTextAr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:text="2023"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_20" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/margin_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/brown"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:padding="@dimen/margin_15"

                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_sunrise" />
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunrise"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_15">

                            </TextView>

                            <TextView
                                android:id="@+id/sunrisetiming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="07:06"
                                android:textColor="@color/white"
                                android:textSize="@dimen/margin_15">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="2"

                            android:padding="@dimen/margin_15">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_sunset" />
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunset"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_15">

                            </TextView>

                            <TextView
                                android:id="@+id/sunsetTiming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="05:22"
                                android:textColor="@color/white"
                                android:textSize="@dimen/margin_15">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="3"
                            android:padding="@dimen/margin_15">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_night" />
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Midnight"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_15">

                            </TextView>

                            <TextView
                                android:id="@+id/midnightTiming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:14"
                                android:textColor="@color/white"
                                android:textSize="@dimen/margin_15">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_time">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:text="Prayers Time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/margin_18">

                    </TextView>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Fajr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/brown"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/margin_10"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/Fajrtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:text="Fajr"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/fajRemainingTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_5"
                            android:layout_weight="1"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14">

                        </TextView>

                        <TextView
                            android:id="@+id/fajrtiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18">

                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/dhuhr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/brown"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/margin_10"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/dhuhrtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:text="Dhuhr"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/dhuhrRemainingTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_5"
                            android:layout_weight="1"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14">

                        </TextView>

                        <TextView
                            android:id="@+id/dhuhrtiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18">

                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Asr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/brown"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/margin_10"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/asrtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:text="Asr"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/asrRemainingTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_5"
                            android:layout_weight="1"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14">

                        </TextView>

                        <TextView
                            android:id="@+id/asrtiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18">

                        </TextView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Maghrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/brown"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/margin_10"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/ic_bg"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/maghribText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:text="Maghrib"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/maghribRemainingTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_5"
                            android:layout_weight="1"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14">

                        </TextView>

                        <TextView
                            android:id="@+id/maghribtiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18">

                        </TextView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Isha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/brown"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/margin_10"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/margin_10"

                        >

                        <TextView
                            android:id="@+id/ishaText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:text="Isha"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/ishaRemainingTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_5"
                            android:layout_weight="1"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_14">

                        </TextView>

                        <TextView
                            android:id="@+id/ishaTiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_18">

                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>